<Window x:Class="EnglishCources.Presentation.Windows.AdminWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EnglishCources.Presentation.Windows"
        mc:Ignorable="d"
        Title="AdminWindow" Height="183" Width="270">
    <Grid>
        <Button CommandParameter="{Binding ., RelativeSource={RelativeSource AncestorType=Window}}" Command="{Binding LogInCommand}" Content="Log in" HorizontalAlignment="Center" Margin="0,125,0,0" VerticalAlignment="Top" FontSize="16" Width="74"/>
        <TextBox Text="{Binding Login}" HorizontalAlignment="Center" Margin="0,31,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBox Text="{Binding Password}" HorizontalAlignment="Center" Margin="0,84,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Label Content="Login" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" FontSize="14"/>
        <Label Content="Password" HorizontalAlignment="Left" Margin="10,58,0,0" VerticalAlignment="Top"/>

    </Grid>
</Window>
