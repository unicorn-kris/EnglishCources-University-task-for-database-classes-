<Window x:Class="EnglishCources.Presentation.Windows.EnglishLevelWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EnglishCources.Presentation.Windows"
        mc:Ignorable="d"
        Title="EnglishLevelWindow" Height="203" Width="288">
    <Grid>
        <Label Content="Letter" HorizontalAlignment="Left" Margin="25,25,0,0" VerticalAlignment="Top" FontSize="14"/>
        <TextBox x:Name="Letter" Text ="{Binding Letter}" HorizontalAlignment="Left" Margin="83,19,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="172" Height="40" PreviewTextInput="Letter_PreviewTextInput"/>
        <Label Content="Number" HorizontalAlignment="Left"  Margin="25,83,0,0" VerticalAlignment="Top" FontSize="14"/>
        <TextBox x:Name="Number" Text ="{Binding Number}" HorizontalAlignment="Left" Margin="83,77,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="172" Height="40" PreviewTextInput="Number_PreviewTextInput"/>

        <Button Content="Save" Command="{Binding SaveCommand}" HorizontalAlignment="Center" Margin="0,134,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.54,0.47" FontSize="20" Width="70"/>

    </Grid>
</Window>
